<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    // khi click vao


    <item android:state_pressed="true">
        <shape>
            // Màu khi click vào
            <solid android:color="#fff" />


            // độ rộng và màu viền
            <stroke android:width="2dp" android:color="@color/backgroundGradientEnd" />


            <corners android:radius="10dp" />

        </shape>

    </item>


    <item>
        <shape>
            // Màu khi không click vào
            <solid android:color="@color/backgroundGradientStart" />


            // độ rộng và màu viền
            <stroke android:width="2dp" android:color="#FFFFFF" />

            <corners android:radius="10dp" />

        </shape>

    </item>
</selector>