<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rlTouch"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:id="@+id/llMain"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:textColor="#3399FF"
            android:textStyle="bold"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#666666"
                android:layout_marginLeft="5dp"
                android:text="Khách hàng: "
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:textColor="#FF6633"
                android:textStyle="bold"
                android:id="@+id/tvKhachhang"
                android:textSize="12dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tvSodienthoai"
                android:textColor="#FF6633"
                android:text=""
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivCall"
                android:layout_marginLeft="5dp"
                android:background="@drawable/iccall"
                android:text="Khách hàng"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"

            android:layout_height="wrap_content">

            <TextView
                android:textColor="#666666"
                android:text="Người giao việc: "
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:textColor="#FF6633"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="12dp"
                android:id="@+id/tvNguoigiaoviec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"

            android:layout_height="wrap_content">

            <TextView
                android:textColor="#666666"
                android:text="Hạn hoàn thành: "
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:textColor="#FF6633"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvHanhoanthanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"

            android:layout_height="wrap_content">

            <TextView
                android:text=""
                android:textColor="#FF6633"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvQuahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#666666"
                android:text="Quá hạn(ngày): "
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_alignTop="@+id/llMain"
        android:layout_marginLeft="5dp"
        android:layout_width="1dp"
        android:layout_alignBottom="@+id/llMain"
        android:background="#666666"
        android:layout_height="wrap_content" />
</RelativeLayout>