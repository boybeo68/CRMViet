<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rlTouch"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llMain"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitleDefault"
                android:textSize="15dp"
                android:textColor="#555555"
                android:textStyle="bold"
                android:text="Tên liên hệ: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/tvTitleDefault"
                android:textSize="12dp"
                android:id="@+id/tvContactName"
                android:gravity="right"
                android:textColor="#FF6633"
                android:layout_centerVertical="true"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCall"
                android:background="@drawable/iccall"
                android:text="Khách hàng"
                android:layout_width="20dp"
                android:layout_marginLeft="5dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivCall"
                android:id="@+id/tvPhone"
                android:textColor="#FF6633"
                android:text=""
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivPosition"
                android:layout_toRightOf="@+id/tvPhone"
                android:background="@drawable/ic_position"
                android:text="Khách hàng"
                android:layout_width="20dp"
                android:layout_marginLeft="5dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivPosition"
                android:id="@+id/tvAddress"
                android:textColor="#FF6633"
                android:text=""
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:text=""
                android:textColor="#FF6633"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/tvJobPositionDefault"
                android:id="@+id/tvJobPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#666666"
                android:text="Chức vụ: "
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvJobPositionDefault" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#666666"
                android:text="Email: "
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmailDefault" />

            <TextView
                android:id="@+id/tvEmail"
                android:textColor="#FF6633"
                android:gravity="right"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvEmailDefault"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#666666"
                android:text="Giới tính: "
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSexDefault" />
            <TextView
                android:id="@+id/tvSex"
                android:textColor="#FF6633"
                android:gravity="right"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvSexDefault"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_alignTop="@+id/llMain"
        android:layout_marginLeft="5dp"
        android:layout_width="1dp"
        android:layout_alignBottom="@+id/llMain"
        android:background="#BBBBBB"
        android:layout_height="wrap_content" />
</RelativeLayout>